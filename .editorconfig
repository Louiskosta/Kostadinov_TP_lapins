# EditorConfig - Maintenir la coh√©rence du code
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = space
indent_size = 4

[makefile]
indent_style = tab

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
